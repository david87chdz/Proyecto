{% extends 'base.html.twig' %}

{% block title %}Juego index{% endblock %}

{% block body %}
    <h1>Juego index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Imagen</th>
                <th>Min_jug</th>
                <th>Max_jug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for juego in juegos %}
            <tr>
                <td>{{ juego.id }}</td>
                <td>{{ juego.nombre }}</td>
                <td>{{ juego.imagen }}</td>
                <td>{{ juego.minJug }}</td>
                <td>{{ juego.maxJug }}</td>
                <td>
                    <a href="{{ path('app_juego_show', {'id': juego.id}) }}">show</a>
                    <a href="{{ path('app_juego_edit', {'id': juego.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_juego_new') }}">Create new</a>
{% endblock %}
